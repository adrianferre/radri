{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "eslint.workingDirectories": [
    { "pattern": "apps/*/" },
    { "pattern": "packages/*/" }
  ],
  "cSpell.words": [
    "Adri",
    "Adrián",
    "Ferré",
    "fira",
    "fontawesome",
    "fortawesome",
    "immer",
    "markdoc",
    "nextjs",
    "Radri",
    "stylesheet",
    "tailwindcss",
    "transpiling",
    "Turborepo",
    "zustand"
  ],
  "editor.formatOnSave": true,
  "files.associations": {
    "*.css": "tailwindcss"
  }
}
